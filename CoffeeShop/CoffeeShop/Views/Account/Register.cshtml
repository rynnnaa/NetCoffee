@model CoffeeShop.Models.ViewModels.RegisterViewModel
@using Microsoft.AspNetCore.Identity
@using CoffeeShop.Models
@inject SignInManager<ApplicationUser> signInManager

@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
        <form asp-action="Register" class="col s12 nav-wrapper" method="post">

            <div class="row" asp-validation-summary="All"></div>

            <div class="input-field col s12">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="input-field col s6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="input-field col s6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="datepicker-calendar-container" col s12">
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" />
                <span asp-validation-for="Birthday"></span>
            </div>

            <div class="input-field">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="input-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="input-field" col s12">
                <label asp-for="FavoriteCoffee"></label>
                <input asp-for="FavoriteCoffee" />
                <span asp-validation-for="FavoriteCoffee"></span>
            </div>
            <div></div>
             <div class="checkbox">
                <label asp-for="State"></label>
                <input asp-for="State"/>
                <span asp-validation-for="State"></span>
            </div>
            <hr>
            <button class="btn-large" type="submit">Register</button>

        </form>
    </div>
    <div>
        <p>Already have an account? Login <a asp-action="Login" asp-controller="Account">here</a>!</p>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>